<link rel="stylesheet" href="/public/css/forms/forms.css" type="text/css">
<button
  type="button"
  class="btn btn-primary"
  data-toggle="modal"
  data-target="#editPromoterHoldings"
  style="height: 1%; margin-left: 2%;"
>
  Edit
</button>

<div
  class="modal fade"
  id="editPromoterHoldings"
  tabindex="-1"
  role="dialog"
  aria-labelledby="editDetailModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editDetailModalLabel">Edit Promoter Holdings</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
          style="height: 1%; margin-left: 5%;"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="editPromoterHoldings" action="/ipoDetail/updatePromoterHoldings" method="POST">
            
          <input type="hidden" name="PromoterHoldingId" value="<%- ipoDetailsQuery?.PromoterHoldings?.PromoterHoldingId %>">
          <input type="hidden" name="IpoId" value="<%- ipoDetailsQuery?.IpoId %>">

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="PreIssue">PreIssue </label>
                <input name="PreIssue" type="text" class="form-control" placeholder="Enter PreIssue" value="<%- ipoDetailsQuery?.PromoterHoldings?.PreIssue %>" />
              </div>
            </div>
    
            <div class="col-md-6">
              <div class="form-group">
                <label for="PostIssue">PostIssue </label>
                <input name="PostIssue" type="text" class="form-control" placeholder="Enter PostIssue" value="<%= ipoDetailsQuery?.PromoterHoldings?.PostIssue %>" />
              </div>
            </div>  
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="PromoterNames">Promoter Names</label>
                <input
                  name="PromoterNames"
                  value="<%- ipoDetailsQuery?.PromoterHoldings?.PromoterNames %>"
                  type="text"
                  class="form-control"
                  id="PromoterNames"
                  placeholder="Enter Promoter Names"
                />
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
