<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>IPO Details</title>
  <link rel="stylesheet" href="/public/css/forms/forms.css" type="text/css">
</head>

<body>

  <div class="col-md-6">
    <div class="card">
      <div class="card-header d-flex">
        <h3>Market Maker</h3>
      </div>
      <div class="card-body table-border-style">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% marketMakerData.forEach(function(data) { %>
                <tr>                      
                  <td><%= data?.MarketMakerId?.MarketMakerName || 'N/A' %></td>                      
                  <% if(ipoDetailsQuery.isBeforeCutoffDate) { %>
                    <td>
                      <button
                        type="button"
                        class="btn btn-link p-0 delete-btn"
                        data-id="<%= data?.MarketMakerId?.MarketMakerId %>"  
                        data-toggle="modal"
                        data-target="#deleteMarketMaker"
                      >
                        <i class="fa fa-trash" style="border: none; color: blue; cursor: pointer;"></i>
                      </button>
                    </td>
                  <% } %>
                </tr>
              <% }) %>
            </tbody>
          </table>     
        </div>
      </div>
    </div>
  </div>

  <!-- for delete confirmation -->
  <div class="modal fade" id="deleteMarketMaker" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this item?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" id="confirm-delete">Delete</button>
        </div>
      </div>
    </div>
  </div>
  <!-- end delete confirmation -->

  <!-- Loader -->
  <%- include('../ui/loader.ejs') %>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', function() {
          const id = this.getAttribute('data-id');
          const confirmButton = document.getElementById('confirm-delete');
          
          confirmButton.setAttribute('data-id', id);
        });
      });

      document.getElementById('confirm-delete').addEventListener('click', function() {
        const id = this.getAttribute('data-id');
        
        // Create a form element dynamically
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/ipoDetail/deleteMarketMaker';

        // Add MarketMakerId as a hidden input
        const inputId = document.createElement('input');
        inputId.type = 'hidden';
        inputId.name = 'MarketMakerId';
        inputId.value = id;
        form.appendChild(inputId);

        // Add IpoId as a hidden input
        const inputIpoId = document.createElement('input');
        inputIpoId.type = 'hidden';
        inputIpoId.name = 'IpoId';
        inputIpoId.value = '<%= ipoDetailsQuery?.IpoId %>';
        form.appendChild(inputIpoId);

        // Append the form to the body and submit it
        document.body.appendChild(form);
        form.submit();
      });
    });
  </script>

</body>
</html>
